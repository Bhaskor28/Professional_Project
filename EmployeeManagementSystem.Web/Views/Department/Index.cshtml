@model IEnumerable<EmployeeManagementSystem.Application.Departments.DepartmentVM>
<div class="container-fluid px-4 mt-4">
    <h2 class="mb-4">Department Management</h2>

    <!-- Top Action Bar -->
    <div class="d-flex justify-content-between mb-3">
        <div>
            <a asp-controller="Department" asp-action="AddDepartment" class="btn btn-primary me-2">
                <i class="bi bi-plus-lg"></i> Add Department
            </a>

            <button class="btn btn-success"><i class="bi bi-file-earmark-excel"></i> Export</button>
        </div>
        <input type="text" class="form-control w-25" placeholder="Search by Department Name..." />
    </div>
</div>
<!-- Employee Table -->
<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>#Id</th>
                    <th>Department Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Example row -->
                @{
                
                foreach(var dept in Model)
                {

                    <tr>
                        <td>@dept.Id</td>
                        <td>@dept.Name</td>
                        <td>
                            <button class="btn btn-sm btn-info"><i class="bi bi-eye"></i></button>
                            <button class="btn btn-sm btn-warning"><i class="bi bi-pencil"></i></button>
                            <button class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></button>
                        </td>
                    </tr>
                    
                }
                }
                <!-- You can use a foreach loop here for real data -->
            </tbody>
        </table>
    </div>
</div>